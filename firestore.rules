rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para usuarios
    match /usuarios/{userId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para contratos - permitir lectura y escritura a usuarios autenticados
    match /contratos/{contractId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Reglas para propuestas
    match /propuestas/{proposalId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Reglas para mensajes/chat
    match /mensajes/{messageId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Reglas para notificaciones
    match /notificaciones/{notificationId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Reglas para transacciones escrow
    match /transacciones_escrow/{transactionId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null;
    }
    
    // Permitir lectura de configuración pública
    match /config/{document} {
      allow read: if true;
    }
    
    // Reglas generales para desarrollo - TEMPORAL
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}