{
  "name": "the-blacklist-web",
  "version": "2.0.0-alpha.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit --skipLibCheck && vite build",
    "build:vercel": "vite build --mode production",
    "build:staging": "npm run clean:dist && vue-tsc && vite build --mode staging",
    "build:production": "npm run clean:dist && vue-tsc && vite build --mode production",
    "build:analyze": "npm run clean:dist && vue-tsc && vite build --mode analyze",
    "build:pwa": "npm run clean:dist && vue-tsc && vite build --mode pwa",
    "build:optimized": "npm run clean:dist && vue-tsc && vite build --mode production && npm run optimize:assets",
    "preview": "vite preview",
    "preview:staging": "vite preview --mode staging",
    "preview:production": "vite preview --mode production",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --run",
    "test:integration": "vitest run src/__tests__/integration/**/*.test.ts",
    "test:performance": "vitest run src/__tests__/performance/**/*.test.ts",
    "test:security": "vitest run src/__tests__/security/**/*.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:system-integration": "vitest run src/__tests__/integration/system-integration.test.ts",
    "test:load": "vitest run src/__tests__/performance/load-testing.test.ts",
    "test:security-comprehensive": "vitest run src/__tests__/security/basic-security.test.ts",
    "test:e2e-complete": "cypress run --spec 'cypress/e2e/complete-system-flow.cy.ts'",
    "test:integration-suite": "node scripts/run-integration-tests.js",
    "test:final-validation": "node scripts/final-system-validation.js",
    "lighthouse": "lighthouse http://localhost:4173 --output html --output-path ./lighthouse-report.html",
    "lighthouse:ci": "lighthouse http://localhost:4173 --output json --output-path ./lighthouse-ci.json --chrome-flags='--headless'",
    "lighthouse:production": "lighthouse https://the-blacklist-879f1.web.app --output json --output-path ./lighthouse-production.json --chrome-flags='--headless'",
    "pwa:test": "npm run build && npm run preview & sleep 5 && npm run lighthouse",
    "performance:audit": "npm run build && npm run preview & sleep 5 && lighthouse http://localhost:4173 --only-categories=performance --output json --output-path ./performance-audit.json",
    "audit:comprehensive": "node scripts/comprehensive-audit.js local",
    "audit:staging": "node scripts/comprehensive-audit.js staging",
    "audit:production": "node scripts/comprehensive-audit.js production",
    "audit:full": "npm run audit:comprehensive && npm run test:performance && npm run security:audit",
    "optimize:final": "node scripts/final-optimization.js",
    "polish:complete": "npm run optimize:final && npm run audit:full",
    "security:audit": "npm audit && npm run test:security",
    "env:validate": "node scripts/validate-env.js validate",
    "env:template": "node scripts/validate-env.js template",
    "env:secrets": "node scripts/validate-env.js secrets",
    "auth:check": "node scripts/check-auth-config.js",
    "auth:test": "node scripts/check-firebase-auth-config.cjs",
    "escrow:disable": "node scripts/toggle-escrow.cjs disable",
    "escrow:enable": "node scripts/toggle-escrow.cjs enable",
    "demo:reset": "node scripts/demo-reset.cjs",
    "health-check:production": "node scripts/health-check.js",
    "monitor:production": "node scripts/production-monitor.js",
    "deploy:staging": "firebase deploy --only hosting:staging",
    "deploy:production": "firebase deploy --only hosting:production",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:all": "firebase deploy",
    "clean": "rmdir /s /q dist 2>nul & rmdir /s /q node_modules\\.vite 2>nul || echo cleaned",
    "clean:dist": "rmdir /s /q dist 2>nul || echo dist cleaned",
    "clean:install": "npm run clean && npm install",
    "optimize:assets": "node scripts/optimize-assets.js",
    "bundle:analyze": "npm run build:analyze && npx vite-bundle-analyzer dist/stats.html",
    "prebuild": "npm run clean:dist",
    "postbuild": "node scripts/post-build.js",
    "pre-deploy": "node scripts/pre-deploy-check.cjs",
    "deploy:check": "npm run build:vercel && npm run pre-deploy"
  },
  "keywords": [
    "vue",
    "typescript",
    "pwa",
    "firebase",
    "marketplace"
  ],
  "author": "The Blacklist Team",
  "license": "MIT",
  "description": "Marketplace exclusivo que conecta estudiantes con académicos de élite",
  "dependencies": {
    "firebase": "^12.3.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.3",
    "@tailwindcss/typography": "^0.5.18",
    "@types/node": "^24.5.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "cypress": "^13.6.0",
    "jsdom": "^25.0.1",
    "lighthouse": "^11.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^2.1.2",
    "vue-tsc": "^3.0.7",
    "web-vitals": "^3.5.0",
    "workbox-window": "^7.3.0"
  }
}
