{
  "name": "the-blacklist-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for The Blacklist marketplace",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:security": "vitest run __tests__/security.test.ts",
    "test:coverage": "vitest run --coverage"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "nodemailer": "^6.9.0",
    "stripe": "^14.0.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.3",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^9.0.0",
    "@types/jest": "^29.0.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "private": true
}